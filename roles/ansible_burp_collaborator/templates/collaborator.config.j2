{
  "serverDomain" : "{{ burp_server_domain }}",
  "workerThreads" : 10,

  "eventCapture": {
      "localAddress" : "{{ burp_local_address }}",
      "publicAddress" : "{{ burp_public_address }}",
      "http": {
         "ports" : {{ burp_http_port }}
       },
      "https": {
          "ports" : {{ burp_https_port }}
      },
      "smtp": {
          "ports": [
              {{ burp_smtp_port }},
              {{ burp_smtp_port2 }}
          ]
      },
      "smtps": {
          "ports": {{ burp_smtps_port }}
      },
      "ssl": {
        "certificateFiles" : [
            "/etc/burp/burp.pk8",
            "/etc/burp/burp.crt",
            "/etc/burp/intermediate.crt"
          ]
      }
  },
  "metrics": {
      "path" : "{{ burp_metrics_path }}",
      "addressWhitelist" : {{ burp_whitelist }}
  },
  "dns": {
      "interfaces" : [{
        "name":"ns",
        "localAddress" : "{{ burp_local_address }}",
        "publicAddress" : "{{ burp_public_address }}",
      }],
      "port" : {{ burp_dns_port }}
  },
  "logLevel": "INFO"
}